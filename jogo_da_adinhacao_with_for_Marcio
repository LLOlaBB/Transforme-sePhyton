def jogar_jogo():
    print("Bem-vindo")
    numero_secreto = random.randint(0, 100)
    nivel = int(input("Escolha um nível easy-1, medium-2 ou hard-3  (1, 2 ou 3): "))

    if nivel == 1:
        total_tentativas = 10
    elif nivel == 2:
        total_tentativas = 7
    else:
        total_tentativas = 5

    pontos = 1000

    for tentativa in range(1, total_tentativas + 1):
        print("\nTentativa", tentativa)
        chute = int(input("Digite um número entre 0 e 100: "))

        if chute < 0 or chute > 100:
            print("Chute não aceito")
            continue

        diferenca = abs(chute - numero_secreto)
        pontos -= diferenca

        if chute == numero_secreto:
            print("Parabéns!")
            break
        elif tentativa == total_tentativas:
            print("Você não tem mais tentativas. O número secreto era", numero_secreto)

        if chute < numero_secreto:
            print("Chute baixo!")
        else:
            print("Chute alto!")

    print("Pontuação final:", pontos)


jogar_jogo()
